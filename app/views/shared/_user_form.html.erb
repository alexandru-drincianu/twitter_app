<section>
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong bg-dark" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5 bg-dark">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-white"><%=title%></h3>
            <%= form_with model:obj do |f| %>
                <form>

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label "Name", :class=>"form-label font-weight-bold text-white" %>
                    <%= f.text_field :name, :class=>"form-control form-control-lg" %>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label "Email", :class=>'form-label font-weight-bold text-white'%>
                    <%= f.email_field :email, :class=>"form-control form-control-lg"%>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label "Password", :class=>'form-label font-weight-bold text-white'%>
                    <%= f.password_field :password, :class=>"form-control form-control-lg" %>
                  </div>

                </div>
                
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label "Age", :class=>'form-label font-weight-bold text-white'%>
                    <%= f.number_field :age, :class=>"form-control form-control-lg"%>
                  </div>

                </div>

              </div>

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label "Phone Number", :class=>'form-label font-weight-bold text-white'%><br>
                    <%= f.telephone_field :phone_number, :class=>"form-control form-control-lg" %>
                  </div>

                </div>
                
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label "Gender", :class=>'form-label font-weight-bold text-white'%><br>
                    <%= f.select :gender, options_for_select([["Select One", ""], "Male", "Female", "Other"]) %>
                  </div>

                </div>


            <div class="row">
                <div class="form-outline">
                    <%= f.label "Profile Picture", :class=>'form-label font-weight-bold text-white'%><br>
                    <%= f.file_field :avatar, :class=>'text-white'%>
                  </div>
            </div>
                

              <div class="mt-4 pt-2">
                <%= f.submit 'Save', :class => 'btn btn-primary btn-lg' %>
              </div>

            </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>