<body class="bg-dark">
    <button class="btn">
    <%= link_to('Back to users','/users') %>
    </button>

    <div class ="row">
        <div class="col-md-4">
            <% if @user.nil? %>

            <% else %>
                <%= render @user%>
            <% end %>
        </div>
        <div class="col-md-6">
            <h3 class="text-white"><%=@title%></h3>
            <% if @user.present? %>
                <%= render @users%>
                <%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: "pagination bg-transparent") %>
            <% end %>
        </div>
    </div>
</body>
