<body class="bg-dark">
    <% if flash[:error] %>
        <div class="alert alert-danger">
            <div class="error"> <%= flash[:error] %></div>
        </div>
    <% end %>

    <section class="bg-dark">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong bg-dark" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5 bg-dark">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-white">Sign In</h3>
            <%= form_with url:login_path do |f| %>
                <form>

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label "Email", :class=>'form-label font-weight-bold text-white'%>
                    <%= f.email_field :email, :class=>"form-control form-control-lg"%>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= f.label "Password", :class=>'form-label font-weight-bold text-white'%>
                    <%= f.password_field :password, :class=>"form-control form-control-lg" %>
                  </div>

                </div>
              </div>

              <div class="mt-4 pt-2">
                <%= f.submit 'Sign In', :class => 'btn btn-primary btn-lg' %>
              </div>

            </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>